<core:FragmentDefinition
    xmlns:table="sap.ui.table"
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
>
    <ValueHelpDialog
        title="{i18n>textValueHelpDialog}"
        ok=".onValueHelpOkPressMatnr"
        cancel=".onExitMatnr"
        key="plnbez"
        descriptionKey="Name"
        supportMultiselect="false"
    >
        <filterBar>
            <fb:FilterBar search="onFilterBarSearchMatnr">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="plnbez"
                        label="{i18n>textMaterial}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="plnbez" />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="maktx"
                        label="{i18n>textItemNameOrg}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="maktx" />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>